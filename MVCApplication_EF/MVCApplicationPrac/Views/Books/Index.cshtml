@model List<BookEntity>

@* view data is used to pass small amount of data from controller to view *@
@{
    ViewData["Title"] = "Books";
}
<h2>Books</h2>

<br />
<div class="row" <div class="col-md-12">
    <a asp-action="Create" asp-controller="Books" class="btn btn-success">Create Book</a>
</div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <td>Book Id</td>
                    <td>Title</td>
                    <td>Author</td>
                    <th class="text-right">Price</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td class="text-right">@String.Format("{0:C}", item.Price)</td>
                            <td>
                                <div>
                                    <a asp-action="Edit" asp-controller="Books" asp-route-id="@item.Id"
                                        class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-controller="Books" asp-route-id="@item.Id"
                                        class="btn btn-danger">Delete</a>
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>